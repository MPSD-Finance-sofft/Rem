- title "Přehled smluv "
div.container-fluid
  ol.breadcrumb
    li.breadcrumb-item
      b
        | Smlouvy
    li.breadcrumb-item
      | vlastněných nemovitostí se zpětnou koupí
.col-xl-12.col-lg-12
  .card.shadow.mb-4
    .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
      h6.m-0.font-weight-bold.text-primary Přehled Smluv
    .card-body style="overflow: auto; display:inline-block"
		p
			b 
				| Počet vyhledaných smluv: 
				= @contract_without_sales_contract.size
		table.table
			tr
		    	th Číslo smlouvy
		    	th Klienti
		    	th Mobil
		    	th Email
		    	th Adresa nemovitosti
		    	th Datum podpisu
		    	th Náklady
		    	th Výkupní cena
		    	th Zpětná koupě
		    	th Nájemní smlouvy
		    	th Datum předpokládaného ukončení poslední nájemní smlouvy
		    	th Předepsáno u nájemních smluv
		    	th Vyinkasováno u nájemních smluv
		   	tr
		    	th Sum:
		    	th
		    	th
		    	th
		    	th
		    	th
		    	th.text-nowrap.text-right = @all_expense
		    	th.text-nowrap.text-right = @purchase_price
		    	th.text-nowrap.text-right = @repurchase
		    	th
		    	th
		    	th.text-nowrap.text-right = @all_leasig_contract_repayments
		    	th.text-nowrap.text-right = @all_leasig_contract_payments
		    - @contract_without_sales_contract.each do |accord|
		    	tr
		    		td = link_to accord.contract_number, accord_path(accord.id)
		    		td.text-nowrap 
		    			- accord.clients.each do |client|
		            		= client.full_name
		                	br
		            td
		            	- accord.clients.each do |client|
		            		= client.mobile.first.try(:phone_number)
		            		br
		           	td
		            	- accord.clients.each do |client|
		            		= client.email.first.try(:email_address)
		            		br
		           	td.text-nowrap
		              	- accord.realty.each do |realty|
		                	= realty.address.try(:index_name)
		                	br
		            td.text-nowrap = accord.date_of_signature
		            td.text-nowrap.text-right = accord.all_expenses_sum_real_amount
		            td.text-nowrap.text-right = accord.purchase_price
		            td.text-nowrap.text-right = accord.repurchase
		           	td
		           		- accord.leasing_contracts.each do |lc|
		           			= link_to lc.id, leasing_contract_path(lc.id)
		           			br
		           	td = accord.all_leasig_contract_rent_to_max
		           	td.text-nowrap.text-right
		           		= accord.all_leasig_contract_repayments
		           	td.text-nowrap.text-right
		           		= accord.all_leasig_contract_payments
		    tr
		    	th Sum:
		    	th
		    	th
		    	th
		    	th
		    	th
		    	th.text-nowrap.text-right = @all_expense
		    	th.text-nowrap.text-right = @purchase_price
		    	th.text-nowrap.text-right = @repurchase
		    	th
		    	th
		    	th.text-nowrap.text-right = @all_leasig_contract_repayments
		    	th.text-nowrap.text-right = @all_leasig_contract_payments