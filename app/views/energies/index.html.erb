<p id="notice"><%= notice %></p>

<h1>Energies</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Date of</th>
      <th>Distributor</th>
      <th>Price</th>
      <th>Payment day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @energies.each do |energy| %>
      <tr>
        <td><%= energy.type %></td>
        <td><%= energy.date_of %></td>
        <td><%= energy.distributor_id %></td>
        <td><%= energy.price %></td>
        <td><%= energy.payment_day %></td>
        <td><%= link_to 'Show', energy %></td>
        <td><%= link_to 'Edit', edit_energy_path(energy) %></td>
        <td><%= link_to 'Destroy', energy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

