              | Datum žádosti
            th
              | Distributor
            th
              | Výše zálohy
            th
              | Datum úhrady
          tbody id="gas_energies"
            = f.fields_for :gas_energies do |gas_energies|
              = render 'gas_energy_fields', f: gas_energies
      .water_energies
        .links
