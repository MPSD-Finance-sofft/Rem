<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>Village</th>
      <th>Zip</th>
      <th>District</th>
      <th>Region</th>
      <th>Accord</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.village %></td>
        <td><%= address.zip %></td>
        <td><%= address.district %></td>
        <td><%= address.region %></td>
        <td><%= address.accord_id %></td>
        <td><%= address.number %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_add_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

